<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="edittext_search">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- MainActivity Tab -->
    <style name="main_btn_about">
        <item name="android:background">@drawable/main_btn_bg_selector</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_tab_btn_right">
        <item name="android:background">@drawable/main_btn_bg_selector</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_tab_btn_play_mode">
        <item name="android:background">@drawable/main_tab_right_btn_style</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_tab_mode_btn_style">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="main_tab_mode_layout_style">
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:background">@drawable/main_btn_bg_selector</item>
    </style>

    <style name="tab_btn">
        <item name="android:textSize">@dimen/tab_btn_textsize</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">1dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/tab_btn_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_btn_search">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/search_btn_selector</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- PlayActivity -->
    <style name="play_btn">
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
    </style>

    <style name="play_switch_btn_style">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/play_switch_btn_selector</item>
    </style>

    <style name="play_music_seekbar">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:progressDrawable">@drawable/music_seekbar_style</item>
        <item name="android:thumb">@drawable/music_seekbar_thumb</item>
    </style>

    <style name="play_right_volume">
        <item name="android:layout_marginTop">50dip</item>
        <item name="android:layout_marginBottom">50dip</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>