<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#9A9A9A"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/wifistatetextview"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:paddingTop="5dip"
        android:text="Wi-Fi State: none">
    </TextView>
    <TextView
    	android:id="@+id/ethernetstatetextview"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:paddingTop="5dip"
        android:text="Ethernet State: none">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/connectContainer"
        android:layout_width="fill_parent"
        android:paddingTop="5dip"
        android:layout_height="wrap_content">

        <Button android:id="@+id/ethernetbutton"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Ethernet" />

        <Button android:id="@+id/wifibutton"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Wifi" />
    </LinearLayout>
</LinearLayout>
