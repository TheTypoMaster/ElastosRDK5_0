
module
{
    interface Elastos.Droid.View.IView;

    namespace Elastos {
    namespace Droid {
    namespace Widget {

    interface ITableRowLayoutParams extends ILinearLayoutLayoutParams {
        SetColumn(
            [in] Int32 column);

        GetColumn(
            [out] Int32* column);

        SetSpan(
            [in] Int32 span);

        GetSpan(
            [out] Int32* span);
    }

    interface ITableRow extends ILinearLayout {
        /**
         * <p>Returns the view at the specified index. This method can be overriden
         * to take into account virtual children. Refer to
         * {@link android.widget.TableLayout} and {@link android.widget.TableRow}
         * for an example.</p>
         *
         * @param index the child's index
         * @return the child at the specified index
         */
        GetVirtualChildAt(
            [in] Int32 index,
            [out] IView** childView);

        /**
         * <p>Returns the virtual number of children. This number might be different
         * than the actual number of children if the layout can hold virtual
         * children. Refer to
         * {@link android.widget.TableLayout} and {@link android.widget.TableRow}
         * for an example.</p>
         *
         * @return the virtual number of children
         */
        GetVirtualChildCount(
            [out] Int32* count);
    }

    } // namespace Widget
    } // namespace Droid
    } // namespace Elastos
}
