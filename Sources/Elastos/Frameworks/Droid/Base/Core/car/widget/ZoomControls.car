
module
{
    interface Elastos.Droid.View.IViewOnClickListener;

    namespace Elastos {
    namespace Droid {
    namespace Widget {

    /**
     * @Involve
     * interface Elastos.Droid.Widget.ILinearLayout
     */
    interface IZoomControls
    {
        SetOnZoomInClickListener(
            [in] IViewOnClickListener* listener);

        SetOnZoomOutClickListener(
            [in] IViewOnClickListener* listener);

        /*
         * Sets how fast you get zoom events when the user holds down the
         * zoom in/out buttons.
         */
        SetZoomSpeed(
            [in] Int64 speed);

        Show();

        Hide();

        SetIsZoomInEnabled(
            [in] Boolean isEnabled);

        SetIsZoomOutEnabled(
            [in] Boolean isEnabled);
    }

    } // namespace Widget
    } // namespace Droid
    } // namespace Elastos
}
